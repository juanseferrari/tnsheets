<!DOCTYPE html>
<html>

<head>
  <%- include("../partials/head.ejs") %>
    <%- include("../partials/header.ejs") %>
      <!-- Titulo del broswer-->
      <title>Drive to Tiendanube | Instrucciones</title>
      <meta property="og:title" content="Drive to Tiendanube | Instrucciones">
      <!-- Esto despues hacerlo cambiado para cada proyecto -->
</head>

<body>
  <!-- Google Tag Manager (noscript) -->
  <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-KMHPBPS" height="0" width="0"
      style="display:none;visibility:hidden"></iframe></noscript>
  <!-- End Google Tag Manager (noscript) -->


  <div class="main-container">
    <h1 class="main-title">
      <%= lang_object.text.config_title %>
    </h1>

    <div class="container border instructions-container">

      <!-- STEP 1 -->
      <div id="step1">
        <% if (dt_connection_id) { %>
          <!-- step-block si ya esta logueado-->
          <div class="step-block step-ok">
            <div class="step-title">
              <div class="step-check">
                <i class="fa-solid fa-circle-check"></i>
              </div>
              <div class="step-text">
                <p><%= lang_object.text.config_step1_title %>
                </p>
              </div>
            </div>

            <div class="step-user-info">
              <div class="step-user-info-image">
                <% if (user_connected.user_logo) { %>
                  <img class="step-user-info-logo" src="<%= user_connected.user_logo %>" alt="">
                  <%} else { %>
                    <img class="step-user-info-logo" src="/images/logos/tiendanube_logo3.png" alt="">
                    <% } %>

              </div>
              <div class="step-user-info-data">
                <h3>
                  <%= user_connected.user_name %>
                </h3>
              </div>


            </div>
          </div>
          <%} else { %>
            <!-- step-block si ya esta logueado-->
            <div class="step-block step-ok">
              <div class="step-title">
                <div class="step-check">
                  <i class="fa-regular fa-circle"></i>
                </div>
                <div class="step-text">
                  <p><%= lang_object.text.config_step1_title %></p>
                </div>
              </div>
              <div class="step-user-info">
                <div class="step-left-text">
                  <h4><%= lang_object.text.dt_config_step1_subtitle %></h4>
                </div>
                <div class="step-right-text">
                  <!-- Login con tienda nube button-->
                  <%- include("../partials/buttons/dt-button.ejs") %>
                </div>

              </div>

            </div>
            <% } %>

      </div>
      <!-- END STEP 1 -->

      <!-- STEP 2  -->
      <div id="step2">
        <div class="step-block step-ok">
          <div class="step-title">
            <div class="step-check">
              <% if (user_connected.spreadsheet_id) { %>
                <i class="fa-solid fa-circle-check"></i>
                <%} else { %>
                  <i class="fa-regular fa-circle"></i>
                  <% } %>
            </div>
            <div class="step-text">
              <p> <%= lang_object.text.config_step2_title %>
              </p>
            </div>
          </div>
          <div class="step-user-info">
            <div class="step-left-text">
              <h4><%= lang_object.text.config_step2_config %></h4>
            </div>
            <div class="step-right-text">
              <% if (user_connected.spreadsheet_id) { %>
                <div class="login-button">
                  <button type="button" class="btn btn-outline-secondary">
                    <a class="sheet-button-a"
                      href="https://docs.google.com/spreadsheets/d/<%= user_connected.spreadsheet_id %>"
                      target="_blank">
                      <div class="login-button-text">
                        <img class="login-button-logo" src="/images/logos/sheets_logo.png" alt="">
                        <p class="login-button-p"><%= lang_object.text.sheet_open_button %></p>
                      </div>
                    </a>
                  </button>
                </div>
                <%} else { %>
                  <%- include("../partials/sheets_buttons/dt-sheet.ejs") %>
                  <% } %>

                    <!-- end clone sheet button -->
            </div>

          </div>

        </div>

      </div>
      <!-- END STEP 2 -->


      <!-- STEP 3 -->

      <div id="step3">
        <div class="step-block step-ok">
          <div class="step-title">
            <div class="step-check">
              <% if (user_connected.spreadsheet_id) { %>
                <i class="fa-solid fa-circle-check"></i>
                <%} else { %>
                  <i class="fa-regular fa-circle"></i>
                  <% } %>
            </div>
            <div class="step-text">
              <p><%= lang_object.text.config_step3_title %></p>
            </div>
          </div>
          <div class="step-user-info">
            <div class="step-left-text">
              <div class="step-3">
                <h3 class="small-text"><%= lang_object.text.config_step3_1 %></h3>
                <h3 class="small-text"><%= lang_object.text.config_step3_2 %></h3>
                <div class="contact-form-ins">
                  <div class="input-group width-100">
                    <div class="input-group-item1">
                      <!-- A futuro agregar validacion de cookie por si el usuario no esta logueado -->
                      <label for="id-conexion"><%= lang_object.text.connection_id %></label>
                      <input type="text" class="form-control" id="id-conexion" aria-describedby="basic-addon2"
                        value="<%= dt_connection_id ? dt_connection_id : '' %>">
                    </div>
                    <div class="input-group-item2">
                      <button class="btn btn-success shadow" onclick="return copyToClipboard(event, this);"><i
                          class="fa-regular fa-copy"></i> <%= lang_object.text.copy_button %></button>
                    </div>
                  </div>
                </div>
                <h3 class="small-text"><%= lang_object.text.config_step3_3 %>
                </h3>
              </div>


            </div>
            <div class="step-right-text">
              <iframe
                src="https://docs.google.com/presentation/d/e/2PACX-1vRhZguOdeL_1YdoW-cBqpu7iC32spiBvx-E8rVKfUs8UC822RsQwLpPhNd3e2ZyeIsO5ClwjPxkuTyw/embed?start=false&loop=false&delayms=5000"
                frameborder="0" width="90%" height="100%" allowfullscreen="true" mozallowfullscreen="true"
                webkitallowfullscreen="true"></iframe>
            </div>

          </div>

        </div>

      </div>

   <!-- STEP 4  -->
   <div id="step4">
    <div class="step-block step-ok">
      <div class="step-title">
        <div class="step-text">
          <p><%= lang_object.text.dt_buy_credits %></p>
        </div>
      </div>
      <% if (unredeemedPayments.to_redeem) { %>
        <p><%= lang_object.text.dt_unredeemed_credits %> <strong><%= unredeemedPayments.amount %></strong></p>
        <p><%= lang_object.text.dt_credits_subtitle %></p>
        <br>
      <%  } %>
      <div class="step-user-info">


        <!-- PRICING DT-->

        <div class="container" id="precios">
          <!-- CHECKS -->
          <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
              <symbol id="check" viewBox="0 0 16 16">
                  <title>Check</title>
                  <path
                      d="M13.854 3.646a.5.5 0 0 1 0 .708l-7 7a.5.5 0 0 1-.708 0l-3.5-3.5a.5.5 0 1 1 .708-.708L6.5 10.293l6.646-6.647a.5.5 0 0 1 .708 0z" />
              </symbol>
          </svg>
      
      
          <main>
              <div class="row row-cols-1 row-cols-md-2 mb-3 text-center">
                  <!-- Despues cambiar el row-cols-md-2 por row-cols-md-3 -->
      
                  <div class="col">
                      <div class="card mb-4 rounded-3 shadow-sm">
                          <div class="card-header py-3">
                              <h4 class="my-0 fw-normal">Pack 250</h4>
                          </div>
                          <div class="card-body">
                              <h1 class="card-title pricing-card-title">U$S 5<small class="text-muted fw-light"></small>
                              </h1>
                              <ul class="list-unstyled mt-3 mb-4">
                                  <li><%= lang_object.text.dt_pack1_subtitle %></li>
                              </ul>
                              <a class="btn w-100 btn btn-lg btn-outline-dark" href="https://buy.stripe.com/bIY17CdyQcI7bi85kq?utm_source=dt_config&client_reference_id=<%= dt_connection_id ? dt_connection_id : '' %>&prefilled_email=<%= google_user.email ? google_user.email : '' %>" target="_blank" role="button"><%= lang_object.text.dt_buy_button %></a>
                          </div>
                      </div>
                  </div>
      
                  <div class="col">
                      <div class="card mb-4 rounded-3 shadow-sm">
                          <div class="card-header py-3 premium-color">
                              <h4 class="my-0 fw-normal">Pack 1000</h4>
                          </div>
                          <div class="card-body">
                              <h1 class="card-title pricing-card-title">U$S 15</h1>
                              <ul class="list-unstyled mt-3 mb-4">
                                <li><%= lang_object.text.dt_pack2_subtitle %></li>
                              </ul>
                              <a class="btn w-100 btn btn-lg btn-outline-dark" href="https://buy.stripe.com/cN2bMg52kbE32LC004?utm_source=dt_config&client_reference_id=<%= dt_connection_id ? dt_connection_id : '' %>&prefilled_email=<%= google_user.email ? google_user.email : '' %>"  target="_blank"    role="button"><%= lang_object.text.dt_buy_button %></a>
                          </div>
                      </div>
                  </div>
              </div>
      
      
          </main>
      
      
      </div>



      <!-- END PRICIING DT-->


      </div>

    </div>

  </div>
  <!-- END STEP 4 -->
     
      <!-- STEP 5  -->
      <div id="step5">
        <div class="step-block step-ok no-border">
          <div class="step-title">
            <div class="step-text">
              <p><%= lang_object.text.config_additional_title %>
              </p>
            </div>
          </div>
          <div class="step-user-info">
            <div class="step-left-text">
              <h4><%= lang_object.text.config_additional_subtitle %> </h4>
            </div>
            <div class="step-right-text">

              <div class="login-button">
                <button type="button" class="btn btn-outline-secondary">
                  <a class="black-button-a" href="/drive-to-tiendanube/documentation" target="_blank">
                    <div class="login-button-text">
                      <img class="login-button-logo" src="/images/icons/document.png" alt="">
                      <p class="login-button-p"><%= lang_object.text.docs_button %></p>
                    </div>
                  </a>
                </button>
              </div>

              <!-- end clone sheet button -->
            </div>

          </div>

        </div>

      </div>
      <!-- END STEP 5 -->


    </div>


  </div>


  <%- include("../partials/footer.ejs") %>
</body>
<script>

</script>
<!-- Google OAUTH JS code-->
<script src="https://apis.google.com/js/platform.js" async defer></script>
<script src="https://apis.google.com/js/api.js" async defer></script>

<script src="/js/instrucciones.js"></script>
<script src="/js/index.js"></script>





<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

</html>